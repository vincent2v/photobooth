.adminwrapper {
  display: block;
  position: relative;
  overflow-y: auto;
  width: 100%;
  height: 100%;
  background-color: var(--primary-color);
  background-image: var(--background-default);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment: fixed; }

input[type="text"],
select {
  background: var(--box-color);
  border: 1px solid var(--border-color);
  border-radius: 4px;
  width: 100%;
  padding: 0 10px;
  color: var(--font-color); }

input[type="checkbox"] {
  margin-right: 5px; }

.admin-panel {
  width: calc(31.25 * 1em);
  padding: 30px 30px 90px;
  height: auto;
  margin: 50px auto;
  background: var(--panel-color);
  position: relative;
  max-width: 100%;
  color: var(--font-color); }

.panel .panel-heading {
  padding: 10px;
  cursor: pointer;
  border: 1px solid var(--border-color); }
  .panel .panel-heading .plus {
    display: inline-block; }
  .panel .panel-heading .minus {
    display: none; }
  .panel .panel-heading:hover {
    background: var(--hover-panel-color); }

.panel .panel-body {
  display: none;
  padding: 20px;
  border: 1px solid var(--border-color); }

.panel.open .panel-heading .minus {
  display: inline-block; }

.panel.open .panel-heading .plus {
  display: none; }

.panel.init .panel-body {
  display: block; }

.form-row {
  margin-bottom: 15px; }

.save-btn,
.reset-btn {
  cursor: pointer;
  background: var(--primary-color);
  color: var(--button-font-color);
  width: 100%;
  position: absolute;
  padding: 20px;
  bottom: 0;
  left: 0;
  right: 0;
  transition: background 0.7s ease; }
  .save-btn:hover,
  .reset-btn:hover {
    background: var(--secondary-color); }
  .save-btn .saving,
  .save-btn .success,
  .save-btn .error,
  .reset-btn .saving,
  .reset-btn .success,
  .reset-btn .error {
    display: none; }
  .save-btn.saving .saving,
  .reset-btn.saving .saving {
    display: inline-block; }
  .save-btn.saving .save,
  .save-btn.saving .success,
  .save-btn.saving .error,
  .reset-btn.saving .save,
  .reset-btn.saving .success,
  .reset-btn.saving .error {
    display: none; }
  .save-btn.success,
  .reset-btn.success {
    background: #2ecc71; }
    .save-btn.success .success,
    .reset-btn.success .success {
      display: inline-block; }
    .save-btn.success .save,
    .save-btn.success .saving,
    .save-btn.success .error,
    .reset-btn.success .save,
    .reset-btn.success .saving,
    .reset-btn.success .error {
      display: none; }
  .save-btn.error,
  .reset-btn.error {
    background: #e74c3c; }
    .save-btn.error .error,
    .reset-btn.error .error {
      display: inline-block; }
    .save-btn.error .save,
    .save-btn.error .saving,
    .save-btn.error .success,
    .reset-btn.error .save,
    .reset-btn.error .saving,
    .reset-btn.error .success {
      display: none; }

.reset-btn {
  background: #e74c3c;
  position: absolute;
  top: 50px;
  right: 30px;
  left: auto;
  width: auto;
  bottom: auto;
  padding: 5px 10px; }
  .reset-btn:hover {
    background: #c0392b; }

.back-to-pb {
  color: var(--font-color);
  text-decoration: none;
  padding: 0 3px; }
  .back-to-pb:hover {
    background-color: var(--hover-panel-color); }
